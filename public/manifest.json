{
  "name": "Automatic Productivity Webtime Tracker",
  "description": "An application that track the user's web activity and record their time on apps that they deem productive or unproductive",
  "version": "1.0",
  "manifest_version": 3,
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Automatic Productivity Webtime Tracker"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "idle",
    "tabs", 
    "activeTab",
    "nativeMessaging"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
